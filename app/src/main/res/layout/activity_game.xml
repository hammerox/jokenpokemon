<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ui.GameActivity">

    <ImageView
            android:id="@+id/image_game_enemychoice"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Inimigo\n\nVS\n\nVocÃª"/>

    <ImageView
            android:id="@+id/image_game_yourchoice"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <TextView
            android:id="@+id/text_game_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Escolha sua jogada!"/>

    <Space android:layout_width="wrap_content" android:layout_height="16dp"/>

    <LinearLayout
            android:id="@+id/linear_game_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/image_game_grass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/bulbasaur"/>

        <ImageView
                android:id="@+id/image_game_fire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/charmander"/>

        <ImageView
                android:id="@+id/image_game_water"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/squirtle"/>

    </LinearLayout>

</LinearLayout>